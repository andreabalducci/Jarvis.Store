@page "/"
@using Orleans
@using Jarvis.Store.Client.Grains
@inject IGrainFactory GrainFactory;

<h1>Hello, world!</h1>

Welcome to @Constants.ApplicationName

<RadzenButton Click="CounterClick">Counter is @_value</RadzenButton>


@code
{
    int _value = 0;

    private async Task CounterClick()
    {
        var grain = GrainFactory.GetGrain<IBlobGrain>("the_one@tenant");
        _value = await grain.ReadAsync();
    }
}
